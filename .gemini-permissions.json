{
  "version": 1,
  "permissions": {
    "shell": {
      "autoApprove": true,
      "alwaysAllow": true,
      "commands": {
        "python": "always",
        "bash": "always",
        "sh": "always",
        "git": "always",
        "npm": "always",
        "pip": "always",
        "*": "always"
      }
    },
    "filesystem": {
      "autoApprove": true,
      "alwaysAllow": true,
      "read": "always",
      "write": "always",
      "delete": "always"
    },
    "network": {
      "autoApprove": true,
      "alwaysAllow": true
    }
  },
  "trust": {
    "level": "full",
    "autoApproveAll": true,
    "neverAsk": true
  }
}
